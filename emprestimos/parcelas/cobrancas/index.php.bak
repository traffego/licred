// Prepara a query base
$sql = "
    SELECT 
        p.id as parcela_id,
        p.numero as parcela_numero,
        p.valor,
        p.valor_pago,
        p.vencimento,
        p.status,
        p.data_pagamento,
        p.forma_pagamento,
        e.id as emprestimo_id,
        e.valor_emprestado,
        e.parcelas,
        e.valor_parcela,
        e.tipo_de_cobranca,
        c.id as cliente_id,
        c.nome as cliente_nome,
        c.telefone
    FROM 
        parcelas p
    INNER JOIN 
        emprestimos e ON p.emprestimo_id = e.id
    INNER JOIN 
        clientes c ON e.cliente_id = c.id
    WHERE 
        1=1
";

// Adiciona filtros √† query se fornecidos
$parametros = [];
$tipos = '';

if (!empty($filtro_status)) {
    $sql .= " AND p.status = ?";
    $parametros[] = $filtro_status;
