}

// Adiciona ordem padr√£o
$sql .= " ORDER BY 
    CASE 
        WHEN p.status = 'atrasado' THEN 1
        WHEN p.status = 'pendente' AND p.vencimento < CURDATE() THEN 1 -- Mesma prioridade que atrasado
